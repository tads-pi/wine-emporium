{
  "name": "wine-emporium-api",
  "version": "0.0.1",
  "description": "Wine Emporium API",
  "author": "github.com/tads-pi",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "nova-migration": "npx prisma migrate dev --name $(expr $(ls -1 prisma/migrations | wc -l)) && npm run reiniciar-db",
    "executar-migrations": "npx prisma migrate deploy && node prisma/seed.js",
    "apagar-db": "docker-compose rm mysql -s -f -v",
    "criar-db": "docker-compose up mysql --detach && sleep 15 && npm run executar-migrations",
    "reiniciar-db": "npm run apagar-db && npm run criar-db",
    "executar-migrations-test": "dotenv -e .env.test -- npx prisma migrate deploy && dotenv -e .env.test -- node prisma/seed.js",
    "apagar-db-test": "docker-compose rm mysql-test -s -f -v",
    "criar-db-test": "docker-compose up mysql-test --detach && sleep 15 && npm run executar-migrations-test",
    "reiniciar-db-test": "npm run apagar-db-test && npm run criar-db-test",
    "build": "nest build",
    "start": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prerodar-testes": "npm run reiniciar-db-test",
    "rodar-testes": "jest --watch --config jest.json",
    "rodar-testes-e2e": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/types": "^3.433.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.14",
    "@prisma/client": "^5.5.2",
    "@vendia/serverless-express": "^4.10.4",
    "argon2": "^0.31.1",
    "aws-sdk": "^2.1487.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "serverless-certificate-creator": "^1.6.0",
    "serverless-domain-manager": "^7.1.2",
    "serverless-dotenv-plugin": "^6.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.12",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "pactum": "^3.5.1",
    "prettier": "^3.0.0",
    "prisma": "^5.5.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
